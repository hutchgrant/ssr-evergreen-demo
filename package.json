{
  "name": "ssr-evergreen-app",
  "version": "0.0.3",
  "description": "Create an evergreen web application with no build configuration",
  "license": "MIT",
  "author": "Grant Hutchinson <grant@hutchdev.ca>",
  "main": "server.js",
  "homepage": "https://github.com/ProjectEvergreen/create-evergreen-app#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProjectEvergreen/create-evergreen-app.git"
  },
  "private": true,
  "keywords": [
    "Web Components",
    "Lit Element"
  ],
  "scripts": {
    "build": "rimraf ./buildClient && webpack --config ./webpack/client.prod.js --progress",
    "develop": "webpack-dev-server --config ./webpack/client.dev.js",
    "lint": "eslint \"*.js\" \"./src/**/*.js\"",
    "serve": "npm run clean && npm run build && ws",
    "start": "cross-env NODE_ENV=development nodemon server.js",
    "start:prod": "cross-env NODE_ENV=production node server.js",
    "clean": "rimraf buildClient buildServer",
    "test": "rimraf ./reports && karma start",
    "watch": "cross-env NODE_ENV=development nodemon -e js --watch src --exec \"node server.js\" ",
    "dev": "concurrently \"npm run develop\" \"npm run watch\" ",
    "prod": "concurrently \"npm run serve\" \"npm run start:prod\" "
  },
  "dependencies": {
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "lit-redux-router": "^0.8.2",
    "puppeteer": "^1.12.0",
    "pwa-helpers": "^0.9.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rendertron": "^2.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.1.0",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.2",
    "babel-plugin-transform-builtin-classes": "^0.6.1",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "css-to-string-loader": "^0.1.3",
    "cssnano": "^4.1.0",
    "eslint": "^5.6.0",
    "eslint-loader": "^2.1.1",
    "extract-css-chunks-webpack-plugin": "^3.3.2",
    "favicons-webpack-plugin": "0.0.9",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.1",
    "jsdom": "^13.2.0",
    "karma": "^6.3.16",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.4",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-junit-reporter": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "local-web-server": "^2.6.0",
    "nodemon": "^1.18.10",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.22.0",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.11",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-hot-server-middleware": "^0.6.0",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  }
}
